- id ||= nil
- name ||= nil
- label ||= nil
- placeholder ||= ''
- type ||= 'text'
- value ||= ''
- tab_allowed ||= false

%div.form-group{ id: id, 'data-concerns' => 'fieldText', 'data-concerns-options' => { tabAllowed: tab_allowed }.to_json }
  %label.col-md-4.control-label{ for: name }= label
  
  %div.col-md-8
    %input.form-control{        |
      id: name,                 |
      name: name,               |
      value: value,             |
      placeholder: placeholder, |
      type: type }
