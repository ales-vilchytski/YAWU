%form#form{ action: rbc_gibdd_process_uin_path, method: 'post', data: { remote: true } }
  
  %div.row
    %div.col-md-4
    
      - content_for :settings do
        %div.form-horizontal{role: 'form'}
          = render('concerns/fields/text', name: 'input', label: 'УИН', placeholder: 'Старый УИН для разбора или 19 цифр для КР')

          %div.form-group
            %label.col-md-3.control-label{ 'name' => 'mode' } Режим работы
            %div.col-md-9
              %select.form-control{ 'name' => 'mode' }
                %option{ 'value' => 'GENERATE' } Генерация
                %option{ 'value' => 'PARSE' } Разбор старого УИН
                %option{ 'value' => 'CHECKSUM' } Добавление контрольного разряда

          %div.form-group
            %label.col-md-3.control-label{ 'name' => 'type' } Тип УИНа
            %div.col-md-9
              %select.form-control{ 'name' => 'type' }
                %option{ 'value' => 'OLD' } Старый (номер и дата пост.)
                %option{ 'value' => 'NEW' } Новый
  
      = render 'concerns/panels/form', |
        header: 'Настройки',           |
        body: yield(:settings)

  %div.row
    %div.col-md-1
      = render('concerns/buttons/submit', text: 'Обработать', disable_with: 'Обработка')
  
  %div.row
    %div.col-md-8
      = render 'concerns/panels/form', |
        header: 'Результат',           |
        body: render('concerns/editors/output', id: 'output_editor', |
          options: { mode: 'text' })

= javascript_include_tag 'views/rbc/gibdd'