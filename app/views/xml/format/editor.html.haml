%form{ id: 'form', action: xml_format_path, method: 'POST', data: { remote: 'true' } }
  
  %div.row
    %div.col-md-8
      %div.panel.panel-default.condensed
        %div.panel-heading
          %h4{'data-editor-anchor' => 'true'}= defined?(header) ? header : t('.input')
          
        %div.panel-body.condensed
          %div.panel.panel-default.condensed
            = render 'concerns/editors/input', id: 'input_xml', name: 'input', |
              content: get_sample_xml('sample.xml').gsub(/(>)\s+/, '\1')     
  
    %div.col-md-4
      %div.panel.panel-default
        %div.panel-heading
          %h4= t('.settings')
    
        %div.panel-body
          %div.form-horizontal{role: 'form'}
            = settings_text_field_tag(name: 'indent_text', label: t('.indent_text.label'), placeholder: t('.indent_text.placeholder'), tab_allowed: true)
            = settings_text_field_tag(name: 'encoding', label: t('.encoding.label'), placeholder: t('.encoding.placeholder'))
    
  %div.row
    %div.col-md-4
      = render 'concerns/buttons/submit', id: 'submit_form', name:  t('.form_submit.label'), disable_with: t('.form_submit.disable')
    
  %div.row
    %div.col-md-8
      %div.panel.panel-default.condensed
        %div.panel-heading
          %h4{'data-editor-anchor' => 'true'}= defined?(header) ? header : t('.output')
          
        %div.panel-body.condensed
          %div.panel.panel-default.condensed
            = render 'concerns/editors/output', id: 'output_xml'

= javascript_include_tag 'xml/format'
