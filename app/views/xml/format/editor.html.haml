%form{ action: xml_format_path, method: 'POST', data: { remote: 'true', editor: 'form' } }
  
  %div.row
    %div.col-md-8
      = render( partial: 'editor/input_editor', locals: {  |
        header: t('.input'),   |
        content: get_sample_xml('sample.xml').gsub(/(>)\s+/, '\1'), |
        settings_json: '{ "name": "input", "mode": "ace/mode/xml" }' }) |
    
    %div.col-md-4
      %div.panel.panel-default
        %div.panel-heading
          %h4= t('.settings')
    
        %div.panel-body
          %div.form-horizontal{role: 'form'}
            = settings_text_field_tag(name: 'indent_text', label: t('.indent_text.label'), placeholder: t('.indent_text.placeholder'), tab_allowed: true)
            = settings_text_field_tag(name: 'encoding', label: t('.encoding.label'), placeholder: t('.encoding.placeholder'))
    
  %div.row
    %div.col-md-4
      = submit_button_tag
    
  %div.row
    %div.col-md-8
      = render( partial: 'editor/output_editor', locals: {  |
        header: t('.output'),  |
        anchor_id: 'result',   |
        anchor_name: 'result', |
        settings_json: '{ "name": "result", "mode": "ace/mode/xml" }' }) |
